<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\..\FrameXML\UI.xsd">
	<Frame name="KibsItemLevelSpinner" virtual="true">
		<Size x="32" y="32"/>
		<Frames>
			<Frame setAllPoints="true">
				<Layers>
					<Layer level="BACKGROUND">
						<Texture file="Interface\COMMON\StreamBackground" setAllPoints="true">
							<Color r="1" g="0.82" b="0"/>
						</Texture>
					</Layer>
					<Layer level="ARTWORK">
						<Texture file="Interface\COMMON\StreamFrame" setAllPoints="true"/>
					</Layer>
				</Layers>
			</Frame>
			<Frame parentKey="AnimFrame" setAllPoints="true">
				<Layers>
					<Layer level="BACKGROUND">
						<Texture file="Interface\COMMON\StreamCircle" setAllPoints="true">
							<Color r="1" g="0.82" b="0"/>
						</Texture>
					</Layer>
					<Layer level="OVERLAY">
						<Texture file="Interface\COMMON\StreamSpark" setAllPoints="true"/>
					</Layer>
				</Layers>
				<Animations>
					<AnimationGroup parentKey="Anim" looping="REPEAT">
						<Rotation order="1" duration="4" degrees="-360"/>
					</AnimationGroup>
				</Animations>
			</Frame>
		</Frames>
	</Frame>

	<Frame name="KibsItemLevelConfigPanel">
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentTitle" text="Kibs Item Level" inherits="GameFontNormalLarge" justifyH="LEFT" justifyV="TOP">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="16" y="-16"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentSubText" text="功能和样式设置" inherits="GameFontHighlightSmall" nonspacewrap="true" maxLines="3" justifyH="LEFT" justifyV="TOP">
					<Size>
						<AbsDimension y="32" x="0"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="0" y="-8"/>
							</Offset>
						</Anchor>
						<Anchor point="RIGHT">
							<Offset>
								<AbsDimension x="-32" y="0"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<CheckButton name="$parentUpgrades" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentSubText" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="-2" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText("显示装备详细升级信息")
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentUpgradesSummary" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentUpgrades" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText("显示装备总计升级信息")
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentCharacter" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentUpgradesSummary" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText("显示自身信息")
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentInspection" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentCharacter" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText("显示目标信息")
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentSmall" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentInspection" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText("更小的装等文字")
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentColor" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentSmall" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText("染色的装等文字")
					</OnLoad>
				</Scripts>
			</CheckButton>
			<CheckButton name="$parentDebug" inherits="OptionsCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentColor" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-8"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						_G[self:GetName().."Text"]:SetText("记录调试信息")
					</OnLoad>
				</Scripts>
			</CheckButton>
		</Frames>

		<Scripts>
			<OnLoad>
				self.controls = {
					Upgrades = KibsItemLevelConfigPanelUpgrades,
					UpgradesSummary = KibsItemLevelConfigPanelUpgradesSummary,
					Character = KibsItemLevelConfigPanelCharacter,
					Inspection = KibsItemLevelConfigPanelInspection,
					Small = KibsItemLevelConfigPanelSmall,
					Color = KibsItemLevelConfigPanelColor,
					Debug = KibsItemLevelConfigPanelDebug,
				}

				KibsItemLevel:RegisterConfigPanel(self)
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
